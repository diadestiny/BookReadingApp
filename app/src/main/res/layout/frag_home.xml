<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView android:id="@+id/iv_blur"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="fitXY"/>

        <ImageView android:id="@+id/iv_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:src="@mipmap/userlogo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   账号:   "
            android:textSize="18sp"
            android:textColor="@color/bg_black"/>
        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="123456789"
            android:textColor="@color/bg_black"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:src="@mipmap/birthlogo"
            android:scaleType="fitXY"/>
        <TextView
            android:textColor="@color/bg_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   生日:   "
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/text2"
            android:textColor="@color/bg_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="点击可选择"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:src="@mipmap/sexlogo"
            android:scaleType="fitXY"/>
        <TextView
            android:textColor="@color/bg_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   性别:   "
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/text3"
            android:textColor="@color/bg_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="点击可选择"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:src="@mipmap/citylogo"
            android:scaleType="fitXY"/>
        <TextView
            android:textColor="@color/bg_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   城市:   "
            android:textSize="18sp"/>
        <TextView
            android:textColor="@color/bg_black"
            android:id="@+id/text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="点击可选择"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/line5"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:src="@mipmap/emaillogo"
            android:scaleType="fitXY"/>
        <TextView
            android:textColor="@color/bg_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   邮箱:   "
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/text5"
            android:textColor="@color/bg_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="点击可编辑"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/line6"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:src="@mipmap/signlogo"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   个性签名:   "
            android:textColor="@color/bg_black"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/text6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/bg_black"
            android:textSize="18sp"
            android:text="这个性，怎么签名!"/>
    </LinearLayout>


    <Button
        android:layout_marginTop="15dp"
        android:id="@+id/bt_exit"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="退出账号"
        android:layout_gravity="center"
        android:backgroundTint="#ff0000"
        android:background="@drawable/button_shape"
        android:textSize="20sp" />


</LinearLayout>